@model IEnumerable<PuneUniversityVotingSystem.Models.Questions>

@{
    ViewData["Title"] = "Index";
    // string[] TableHeaders = new string[]
    //{
    //     "QuestionId"
    //   ,"Question"
    //   ,"Option1"
    //   ,"Option2"
    //       };
}

<h1>Student Corner</h1>

<form>
    <table class="table">

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Question)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Option1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Option2)
                </th>

                <th>
                    <label for="form">Result</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Question)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Option1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Option2)
                </td>
                <td>
                    <input type="text" class="form-control" placeholder="Option">

                </td>
                <td>

                    <button class="btn btn-primary " name="submit" type="submit">Submit</button>
                </td>
            </tr>
            }
          
        </tbody>
    </table>
</form>